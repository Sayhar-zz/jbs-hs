<?xml version="1.0" encoding="utf-8"?>
<!-- This is the main layout(vertical view) it makes all the buttons, calls the color off the xml file, then calls the title off the String.xml.-->
	<LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:layout_height="fill_parent"
 	android:layout_width="fill_parent"
 	android:padding="30dip" android:orientation="vertical">
		<LinearLayout android:orientation="vertical" 
		android:id="@+id/linearLayout1" 
		android:layout_width="fill_parent" 
		android:layout_gravity="center" 
		android:layout_height="wrap_content">
		
			<TextView android:layout_marginBottom="25dip" 
						android:layout_width="wrap_content" 
						android:id="@+id/welcome_title" 
						android:layout_height="match_parent" 
						android:layout_gravity="top" 
						android:textSize="24.5sp" 
						android:text="@string/happysad_name">
			</TextView>
		
		<RelativeLayout android:layout_width="fill_parent" 
						android:id="@+id/relativeLayout1" 
						android:layout_height="wrap_content" 
						android:layout_gravity="center_horizontal">
						
				<Button android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:layout_alignParentRight="true" 
				android:id="@+id/sad_button" 
				android:background="@drawable/frown">
				</Button>
				<Button android:layout_height="wrap_content" 
						android:layout_alignParentLeft="true" 
						android:layout_width="wrap_content" 
						android:id="@+id/happy_button" 
						android:background="@drawable/smile"></Button>
			</RelativeLayout>
			</LinearLayout>
		</LinearLayout>