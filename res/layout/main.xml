<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:layout_height="fill_parent"
 	android:layout_width="fill_parent"
 	android:padding="10dip" android:orientation="vertical">
 	
		<LinearLayout 
			android:id="@+id/linearLayout1" 
			android:layout_height="wrap_content"
			android:layout_gravity="center" 
			android:layout_width="fill_parent" 
			android:orientation="vertical" 
			android:layout_marginTop="150dip">
			
			<!-- How are you feeling? -->
			<TextView 
				android:id="@+id/welcome_title"  
				android:layout_height="match_parent" 
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="25dip" 
				android:layout_width="wrap_content"
				android:text="@string/happysad_name"
				android:textSize="24.5sp" >
			</TextView>
			
			<RelativeLayout 
				android:id="@+id/relativeLayout1" 
				android:layout_gravity="center_horizontal"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" >
				
				<Button 
					android:background="@drawable/promptsmile"
					android:id="@+id/happy_button" 
					android:layout_alignParentLeft="true" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" >
				</Button>
				
				<Button 
					android:background="@drawable/promptfrown"
					android:id="@+id/sad_button" 
					android:layout_alignParentRight="true" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" >
				</Button>
			</RelativeLayout>
			</LinearLayout>
		</LinearLayout>