<?xml version="1.0" encoding="utf-8"?>
	<RelativeLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:layout_height="match_parent"
 	android:layout_width="match_parent"
 	android:background="@drawable/promptback"
     android:orientation="vertical">
 	
		<LinearLayout 
			android:id="@+id/linearLayout1" 
			android:layout_height="wrap_content"
			android:layout_gravity="center" 
			android:layout_width="fill_parent" 
			android:orientation="vertical" 
			android:layout_marginTop="75dip">
			
			<!-- How are you feeling? -->
			<TextView 
				android:id="@+id/welcome_title"  
				android:layout_height="match_parent" 
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="50dip" 
				android:layout_width="wrap_content"
				android:text="@string/happysad_name"
				android:textSize="24.5sp" >
			</TextView>
			
			<RelativeLayout 
				android:id="@+id/relativeLayout1" 
				android:layout_gravity="center_horizontal"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" >
				
				<Button 
					android:background="@drawable/promptsmile"
					android:id="@+id/happy_button" 
					android:layout_alignParentLeft="true" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" >
				</Button>
				
				<Button 
					android:background="@drawable/promptfrown"
					android:id="@+id/sad_button" 
					android:layout_alignParentRight="true" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" >
				</Button>
			</RelativeLayout>
			
			<RelativeLayout 
				android:layout_gravity="bottom"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" >
				
				<Button 
					android:text="Skip to Dashboard" 
					android:id="@+id/more_to_dash" 
					android:layout_centerHorizontal="true" 
					android:layout_marginTop="50dip" 
					android:layout_width="110dip" 
					android:layout_height="60dip">
				</Button> 
			</RelativeLayout>
			</LinearLayout>
		</RelativeLayout>
